<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="신고 내역"
                android:textSize="20sp"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="15dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:src="@drawable/ic_title"
                    android:layout_marginTop="10dp"
                    android:padding="2dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제목"
                    android:paddingRight="25dp"
                    android:layout_margin="3dp"/>

                <TextView
                    android:id="@+id/tx_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:layout_margin="3dp"
                    android:padding="10dp"
                    android:background="@drawable/edittext_style" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="25sp     "
                    android:src="@drawable/ic_calendar"
                    android:layout_marginTop="10dp"
                    android:padding="3dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="날짜"
                    android:paddingRight="25dp"
                    android:layout_margin="3dp"/>

                <TextView
                    android:id="@+id/tx_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:layout_margin="3dp"
                    android:padding="10dp"
                    android:background="@drawable/edittext_style" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:src="@drawable/ic_location"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="위치"
                    android:paddingRight="25dp"
                    android:layout_margin="3dp"/>

                <TextView
                    android:id="@+id/tx_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:layout_margin="3dp"
                    android:padding="10dp"
                    android:background="@drawable/edittext_style" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:src="@drawable/ic_crop"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="작물"
                    android:paddingRight="25dp"
                    android:layout_margin="3dp"/>

                <TextView
                    android:id="@+id/tx_crop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:layout_margin="3dp"
                    android:padding="10dp"
                    android:background="@drawable/edittext_style"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:src="@drawable/ic_symtom"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="증상"
                    android:paddingRight="25dp"
                    android:layout_margin="3dp"/>

                <TextView
                    android:id="@+id/tx_symptom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:layout_margin="3dp"
                    android:padding="10dp"
                    android:background="@drawable/edittext_style"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:src="@drawable/ic_pest"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="해충"
                    android:paddingRight="25dp"
                    android:layout_margin="3dp"/>

                <TextView
                    android:id="@+id/tx_pest_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:layout_margin="3dp"
                    android:padding="10dp"
                    android:background="@drawable/edittext_style"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="30dp">

                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:src="@drawable/ic_pencil"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="세부사항"
                    android:layout_margin="3dp"/>

                <TextView
                    android:id="@+id/tx_details"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:background="@drawable/edittext_style"
                    android:text="TextView"
                    android:layout_margin="3dp"
                    android:padding="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="30dp">

                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:src="@drawable/ic_siren"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="진행상태"
                    android:layout_margin="3dp"/>


                <TextView
                    android:id="@+id/tx_whether_to_solve"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="해결 전"
                    android:layout_margin="3dp"
                    android:padding="10dp"
                    android:background="@drawable/edittext_style"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginBottom="30dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_whether_to_solve"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_background"
                android:text="해결 완료"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>