<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:rowCount="2"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_rowWeight="4">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/symptomInformationButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_button_background"
            android:drawableBottom="@drawable/ic_big_symptom"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="질병정보\n조회"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="30dp"
            android:textSize="50dp"

            android:fontFamily="@font/gmarket_sans_ttf_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_rowWeight="4">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/pestInformationButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_button_background"
            android:drawableBottom="@drawable/ic_big_pest"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="해충정보\n조회"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="30dp"
            android:textSize="50dp"

            android:fontFamily="@font/gmarket_sans_ttf_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</GridLayout>