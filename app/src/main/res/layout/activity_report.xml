<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/first_Text"
                    android:textSize="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="병해충"
                    android:layout_margin="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="#04CF5C"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/seconde_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 신고를 위해"
                    android:textSize="25dp"
                    android:layout_margin="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="#000000"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/third_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정보를 입력해주세요 "
                android:textSize="25dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:textStyle="bold" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="46dp">

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/locationButton"
                    android:layout_width="208dp"
                    android:layout_height="50dp"
                    android:background="@drawable/report_button_background"
                    android:drawableStart="@drawable/ic_location"
                    android:text="위치 등록"
                    android:textAlignment="viewStart"
                    android:textColor="#795548"
                    android:textStyle="bold"
                    android:paddingLeft="50dp"
                    android:layout_margin="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/cropButton"
                    android:layout_width="208dp"
                    android:layout_height="50dp"
                    android:background="@drawable/report_button_background"
                    android:text="농작물 선택"
                    android:drawableStart="@drawable/ic_crop"
                    android:textAlignment="textStart"
                    android:paddingLeft="50dp"
                    android:textColor="#795548"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/symptomButton"
                    android:layout_width="208dp"
                    android:layout_height="50dp"
                    android:background="@drawable/report_button_background"
                    android:text="증상 선택"
                    android:drawableStart="@drawable/ic_symtom"
                    android:textAlignment="textStart"
                    android:paddingLeft="50dp"
                    android:textColor="#795548"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/pestButton"
                    android:layout_width="208dp"
                    android:layout_height="50dp"
                    android:background="@drawable/report_button_background"
                    android:text="해충 선택"
                    android:drawableStart="@drawable/ic_pest"
                    android:textAlignment="textStart"
                    android:paddingLeft="50dp"
                    android:textColor="#795548"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/imageButton"
                    android:layout_width="208dp"
                    android:layout_height="50dp"
                    android:background="@drawable/report_button_background"
                    android:text="이미지 첨부"
                    android:textColor="#795548"
                    android:layout_margin="5dp"
                    android:drawableStart="@drawable/ic_image"
                    android:textAlignment="textStart"
                    android:paddingLeft="50dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="79dp"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="세부사항 "
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#000000"
                android:layout_marginLeft="15dp"
                android:textStyle="bold" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/detailText"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:background="@drawable/edittext_style"
                    android:ems="10"
                    android:gravity="start|top"
                    android:hint="200자 내로 적어주세요."
                    android:inputType="textMultiLine"
                    android:maxLength="200"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    android:layout_margin="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="64dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/reportButton"
                    android:layout_width="208dp"
                    android:layout_height="53dp"
                    android:background="@drawable/report_button_background"
                    android:text="신고하기"
                    android:textColor="#795548"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>